# --- S3 ---
# Required: your S3 bucket name and optional key prefix
S3_BUCKET=aiindexcontent
S3_PREFIX=

# AWS credentials can be provided via environment, shared config, or instance role
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

ALLOWEDPRINCIPALS_MODE=string
USE_S3_TAG_FOR_ALLOWEDPRINCIPALS=true
ALLOWEDPRINCIPALS_TAG_NAME=allowedprincipals

# --- Azure AI Search ---
# Your search service endpoint (include https://)
AZURE_SEARCH_SERVICE=https://rude-s3-search.search.azure.us
# Your target index name (created via portal wizard)
AZURE_SEARCH_INDEX=s3-index
# Admin or data key for simplicity in this sample (or omit if you wire up Entra ID separately)
AZURE_SEARCH_API_KEY=

# --- Azure OpenAI ---
# Your Azure OpenAI resource endpoint (include https://)
AZURE_OPENAI_ENDPOINT=https://rudeaoai-gov.openai.azure.us/
# API key to call embeddings (this sample expects a key)
AZURE_OPENAI_API_KEY=
# Name of your embeddings deployment (e.g., text-embedding-3-small)
AZURE_OPENAI_EMBED_DEPLOYMENT=text-embedding-ada-002

# --- Optional: Security enrichment ---
# Endpoint to resolve principals from metadata hints
SECURITY_ENRICH_URL=
# Seconds to wait on the HTTP call
SECURITY_ENRICH_TIMEOUT=5
# S3 object metadata key to read a hint from (keys are normalized lower-case by boto3)
SECURITY_S3_META_KEY=x-allowedprincipal-hint

# --- Behavior tuning ---
CHUNK_LEN=2000
CHUNK_OVERLAP=500
CONCURRENCY=4
