# Azure Data Explorer Configuration
# Set these environment variables in your Azure App Service
KUSTO_CLUSTER_URL=https://your-cluster.region.kusto.windows.net
KUSTO_DEFAULT_DATABASE=your-default-database

# Azure App Service Configuration
# These are automatically set by Azure App Service
# WEBSITE_HOSTNAME=your-app.azurewebsites.net
# WEBSITE_SITE_NAME=your-app-name

# Logging Configuration
LOG_LEVEL=INFO

# Server Configuration
MCP_SERVER_NAME=Rude MCP Server
MCP_SERVER_VERSION=1.0.0
MCP_SERVER_DESCRIPTION=A FastMCP server providing Math tools and Azure Data Explorer integration

# Azure AD Application Configuration (required for OBO flow)
# Get these values from your Azure AD App Registration
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-app-client-id-here
AZURE_CLIENT_SECRET=your-app-client-secret-here
OBO_SCOPE=https://kusto.kusto.usgovcloudapi.net/.default
# Azure Government Cloud Configuration
AZURE_AUTHORITY_HOST=https://login.microsoftonline.us

# Get this from your Application Insights resource in Azure portal
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=https://dc.applicationinsights.us;LiveEndpoint=https://live.applicationinsights.us

# Additional Application Insights Settings
MCP_SERVER_VERSION=1.0.0
ENVIRONMENT=production

# Security Configuration (for production)
# ALLOWED_ORIGINS=https://your-client-domain.com
CORS_ENABLED=true
CORS_ORIGINS=*

# Optional: Fictional API Configuration
FICTIONAL_COMPANIES_API_URL=http://localhost:8000

#RAG tools settings
RAG_SEARCH_ENDPOINT=https://rude-search.search.azure.us
RAG_SEARCH_KEY=
RAG_SEARCH_INDEX_NAME=rag-1756400204056
RAG_CONTENT_FIELD=chunk
RAG_VECTOR_FIELD=text_vector
# Name of the index field that stores principal identifiers used for filtering
RAG_ALLOWED_PRINCIPALS_FIELD=allowedPrincipals
#RAG AOAI settings
AZURE_OPENAI_ENDPOINT=https://rudeaoai-gov.openai.azure.us/
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4o
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# Optional: RAG blob container name for URL construction fallback
RAG_STORAGE_CONTAINER_NAME=fema

# Azure Blob Storage Configuration  
AZURE_STORAGE_ACCOUNT_NAME=rudechatstore
AZURE_STORAGE_ENDPOINT_SUFFIX=core.usgovcloudapi.net
AZURE_STORAGE_CONTAINER_NAME=documents
AZURE_STORAGE_CONNECTION_STRING=

USER_ACCESS_CHECK_URL=https://accesschecker.azurewebsites.us/api/user-access